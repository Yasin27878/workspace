package com.yili.IOWrite;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class IOwrite {

	public static void main(String[] args) throws IOException {
		
		//1.创建对象
		//2.调用对象并刷新
		//3.关闭
		FileWriter fw =new FileWriter("file.txt");
		
		fw.write("biaodi");
		fw.write('a');
		fw.flush();
		fw.close();
		
	}

}
