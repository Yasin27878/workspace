/*
 * 定义一个表示学生信息的类Student，要求如下：
　（1）类Student的成员变量：
            sNO示学号；sName表示姓名；sSex表示性别；sAge表示年龄； sJava：表示Java课程成绩。
　（2）类Student带参数的构造方法： 
            在构造方法中通过形参完成对成员变量的赋值操作。
  （3）类Student的方法成员：
            getNo（）：获得学号； 
            getName（）：获得姓名； 
            getSex（）：获得性别；
            getAge（）获得年龄；
            getJava（）：获得Java 课程成绩
            根据类Student的定义，创建五个该类的对象，选择合适的集合存储，输出每个学生的信息，  计算并输出这五个学生Java语言成绩的平均值，以及计算并输出他们Java语言成绩的最大值和最小值。
            
 * */
package com.zuoye;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.TreeSet;

public class TreeSetTest {

	public static void main(String[] args) {
		TreeSet ts=new TreeSet();
		int scores=0;
		
		ts.add(new Student(1,"张三",'男',18,88));
		ts.add(new Student(2,"李四",'女',16,98));
		ts.add(new Student(3,"王五",'男',17,78));
		ts.add(new Student(9,"赵六",'女',38,82));
		ts.add(new Student(5,"钱七",'男',28,88));
		
		
		for (Iterator iterator = ts.iterator(); iterator.hasNext();) {
			Student object = (Student) iterator.next();
			
			 scores= object.getJava()+scores;
			 
			 if (iterator.hasNext()==null) {
				 System.out.println("java平均分为:"+scores/5);
			}
			
		}
		
		

	}

}
